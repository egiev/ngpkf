{
  "name": "ngpkf",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "license": "MIT",
  "author": "",
  "scripts": {
    "app:rebuild:dev": "npm run compose:dev -- up -d --build --force-recreate",
    "app:rebuild:local": "npm run compose:local -- up -d --build --force-recreate",
    "app:rebuild:prod": "npm run compose:prod -- up -d --build --force-recreate",
    "app:start:dev": "npm run compose:dev -- up -d",
    "app:start:dev:cli": "npm run compose:dev -- exec -ti app npx -- npm run start:cli",
    "app:start:local": "npm run compose:local -- up -d",
    "app:start:local:cli": "npm run compose:local -- exec -ti app npx ts-node -r tsconfig-paths/register src/cli.ts",
    "app:start:prod": "npm run compose:prod -- up -d",
    "app:start:prod:cli": "npm run compose:prod -- exec -ti app npx -- npm run start:cli",
    "app:stop:dev": "npm run compose:dev -- down",
    "app:stop:local": "npm run compose:local -- down",
    "app:stop:prod": "npm run compose:prod -- down",
    "build": "nest build",
    "compose:dev": "docker compose --env-file .env.dev -f docker-compose.yml -f docker-compose.dev.yml",
    "compose:local": "docker compose --env-file .env.local -f docker-compose.yml -f docker-compose.local.yml",
    "compose:prod": "docker compose --env-file .env.prod -f docker-compose.yml -f docker-compose.prod.yml",
    "db:migrate:create": "npm run compose:dev -- exec -ti app npx mikro-orm migration:create --config ./src/config/postgres.config.ts --context postgres",
    "db:migrate:up": "npm run compose:dev -- exec -ti app npx mikro-orm migration:up --config ./src/config/postgres.config.ts --context postgres",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky",
    "start": "nest start",
    "start:cli": "ts-node -r tsconfig-paths/register src/cli.ts",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "testss": "docker ps"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,json,css,md}": [
      "prettier --write",
      "eslint"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@adminjs/express": "^6.1.1",
    "@adminjs/mikroorm": "^4.1.0",
    "@mikro-orm/core": "^6.4.9",
    "@mikro-orm/migrations": "^6.5.6",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.4.9",
    "@mikro-orm/reflection": "^6.4.9",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/platform-express": "^11.0.1",
    "adminjs": "^7.8.17",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "i": "^0.3.7",
    "kafkajs": "^2.2.4",
    "nest-commander": "^3.20.1",
    "npm": "^11.6.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@mikro-orm/cli": "^6.5.6",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.10",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-morph": "^25.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
